{
  "name": "overdrag",
  "private": false,
  "version": "0.1.0",
  "description": "A simple drag and resize element library, with control points, events and more...",
  "license": "MIT",
  "keywords": [
    "drag",
    "resize",
    "control points",
    "overdrag"
  ],
  "type": "module",
  "author": "sam.avanesoff@gmail.com",
  "types": "./dist/types/index.d.ts",
  "main": "./dist/index.js",
  "scripts": {
    "prepublish": "yarn run build",
    "clean": "rm -rf ./lib",
    "build": "yarn run clean && yarn run build:esm",
    "build:esm": "tsc -p ./tsconfig.json && mv ./dist/index.js ./dist/index.mjs",
    "prepack": "yarn run build",
    "test": "jest --config jestconfig.json"
  },
  "devDependencies": {
    "@types/events": "^3.0.0",
    "@types/jest": "^29.5.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/savanesoff/overdrag.git",
    "directory": "lib"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "packageManager": "^yarn@1.22.19",
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
